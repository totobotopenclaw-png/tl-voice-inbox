{
  "name": "@tl-voice-inbox/root",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "packageManager": "pnpm@9.15.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"pnpm dev:api\" \"pnpm dev:web\"",
    "dev:api": "pnpm --filter api dev",
    "dev:web": "pnpm --filter web dev",
    "build": "pnpm -r build",
    "build:web": "pnpm --filter web build",
    "build:api": "pnpm --filter api build",
    "start": "pnpm --filter api start",
    "lint": "pnpm -r lint",
    "typecheck": "pnpm -r typecheck",
    "db:migrate": "pnpm --filter api db:migrate",
    "db:rollback": "pnpm --filter api db:rollback",
    "test:db": "pnpm --filter api test:db",
    "model:download": "pnpm --filter api model:download",
    "llm:download": "pnpm --filter api llm:download",
    "setup": "pnpm install && pnpm build && pnpm db:migrate",
    "setup:dev": "pnpm install && pnpm db:migrate"
  },
  "devDependencies": {
    "@types/node": "^22.10.0",
    "concurrently": "^9.1.0",
    "typescript": "^5.7.0"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
